<li class="article-snippet center-flex">
    <a href="{{ post.url }}" style="background: url({{post.data.imageSrc}}) no-repeat center;"></a>
    <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
    <div>
        <blockquote>{{ post.data.summary }}</blockquote>
        <p>By <strong>{{ post.data.author }}</strong>.</strong></p>
    </div>
</li>