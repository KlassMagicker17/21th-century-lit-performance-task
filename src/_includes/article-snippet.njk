<li>
    <img src="{{ post.data.imageSrc }}" alt=" {{ post.data.altText }}">
    <div>
        <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
        <blockquote>{{ post.data.summary }}</blockquote>
        <p>By <strong>{{ post.data.author }}</strong>. Posted at <strong>{{ post.date | postDate}}</strong></p>
    </div>
</li>